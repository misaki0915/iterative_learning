<%= form_with(model: task, local: true) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'タスク内容' %>
  <%= f.text_field :content %>
  <label class="ml-1 col-form-label">優先度</label><%= f.select :priority, [["低", 0], ["中", 1], ["高", 2]], class: 'form-control'%>
  <%= f.label :scheduled_date, '日程' %>
  <%= f.date_field :scheduled_date %>

  <%= f.submit '投稿' %>
<% end %>