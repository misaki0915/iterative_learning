<div class=""
<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <div class="media-body">
        <div>
          <p class="mb-0">
            <%= link_to content_tag(:i, '', class: 'far fa-square'), task_path(task), method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-sm' %>
            <%= link_to content_tag(:i, '', class: 'fas fa-check-square'), task_path(task), method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-sm' %>
            <% if task.priority %>
              (<%= task.priority %>)
            <% else %>
              　
            <% end %>
            <%= task.content %>
          </p>
        </div>
        <div>
          <div class="mr-2 text-right">
            <%= link_to '編集', edit_task_path(task), class: 'btn btn-default btn-sm'%>|
            <%= link_to "削除", task_path(task), method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-sm' %>
          </div>
          <hr>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>