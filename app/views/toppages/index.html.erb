<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-8">
      <%= render 'tasks/tasks', tasks: @tasks %>
    </aside>
    <div class="col-sm-4">
      <%= form_with(model: @task, local: true) do |f| %>
        <div class="form-group">
          <label class="ml-1 col-form-label">日程</label>
          <div class="ml-1">
            <%= f.date_field :scheduled_date, class: 'form-control', rows: 1 %>
          </div>
          <label class="ml-1 col-form-label">優先度</label>
          <div class="ml-1">
            <%= f.text_area :priority, class: 'form-control', rows: 1 %>
          </div>
          <label class="ml-1 col-form-label">内容</label>
          <div class="ml-1">
            <%= f.text_area :content, class: 'form-control', rows: 5 %>
          </div>
        </div>
        <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the My Tasks</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>